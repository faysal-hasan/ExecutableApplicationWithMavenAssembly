<assembly>
  <id>bin</id>
  <includeBaseDirectory>true</includeBaseDirectory>
  <baseDirectory>${project.build.finalName}</baseDirectory>
  <formats>
    <format>dir</format>
  </formats>

  <dependencySets>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <unpack>false</unpack>
      <excludes>
        <exclude>${project.groupId}:${project.artifactId}</exclude>
      </excludes>
    </dependencySet>
    <dependencySet>
      <outputDirectory></outputDirectory>
      <unpack>false</unpack>
      <includes>
        <include>com.orocube:auto-updater</include>
      </includes>
      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}
      </outputFileNameMapping>
    </dependencySet>
    <dependencySet>
      <outputDirectory>database/derby-server/lib</outputDirectory>
      <unpack>false</unpack>
      <includes>
        <include>org.apache.derby:derby</include>
        <include>org.apache.derby:derbynet</include>
      </includes>
      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}
      </outputFileNameMapping>
    </dependencySet>
  </dependencySets>

  <fileSets>
    <!-- Adds startup scripts to the root directory of zip package -->
    <fileSet>
      <directory>${project.basedir}</directory>
      <outputDirectory></outputDirectory>
      <filtered>false</filtered>
      <includes>
        <include>CHANGES</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>etc</directory>
      <outputDirectory></outputDirectory>
      <filtered>false</filtered>
      <includes>
        <include>${project.artifactId}.exe</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${user.home}/jre</directory>
      <outputDirectory>jre</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>plugins</directory>
      <outputDirectory>plugins</outputDirectory>
      <filtered>false</filtered>
      <includes>
        <include>*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>database/derby-server</directory>
      <outputDirectory>database/derby-server</outputDirectory>
      <includes>
        <include>*.bat</include>
        <include>*.sh</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory>database/derby-single</outputDirectory>
      <includes>
        <include>posdb/**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory>database/derby-server</outputDirectory>
      <includes>
        <include>posdb/**/*</include>
      </includes>
    </fileSet>
    <!-- adds jar package to the root directory of zip package -->
    <fileSet>
      <directory>target</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>${project.build.finalName}.jar</include>
      </includes>
    </fileSet>

    <fileSet>
      <directory>i18n</directory>
      <outputDirectory>i18n</outputDirectory>
      <includes>
        <include>*.properties</include>
      </includes>
    </fileSet>

    <fileSet>
      <directory>config</directory>
      <outputDirectory>config</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
      <excludes>
        <exclude>ui_icons/header_logo.png</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>branding/${project.build.finalName}</directory>
      <outputDirectory>config/ui_icons</outputDirectory>
      <includes>
        <include>*.png</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/com/floreantpos/report/template</directory>
      <outputDirectory>config/printerlayouts</outputDirectory>
      <includes>
        <include>**/*.jrxml</include>
        <include>**/*.jasper</include>
      </includes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <filtered>true</filtered>
      <source>etc/${project.artifactId}.bat</source>
      <outputDirectory>/</outputDirectory>
      <destName>${project.build.finalName}.bat</destName>
    </file>
    <file>
      <filtered>true</filtered>
      <source>etc/${project.artifactId}.sh</source>
      <outputDirectory>/</outputDirectory>
      <destName>${project.build.finalName}.sh</destName>
    </file>
  </files>
</assembly>